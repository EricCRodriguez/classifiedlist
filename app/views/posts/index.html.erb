<p class="h4"><%= t("post.plural") %></p>

<table class="table mt-4">
  <thead>
    <tr>
      <th><%= t("form.label.title") %></th>
      <th><%= t("form.label.name") %></th>
      <th><%= t("form.label.date") %></th>
      <th><%= t("form.label.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= link_to post.title, post_path(post) %></td>
        <td><%= post.account.email %></td>
        <td><%= time_ago_in_words post.created_at %> <%= t 'post.posted' %></td>
        <td>
          <%= link_to "Edit", edit_post_path(post) %> |
          <%= link_to 'Delete', post, method: :delete, data: { confirm: t("form.confirm") } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
